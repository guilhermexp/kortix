{
	"name": "kortix-browser-extension",
	"description": "Browser extension for the Kortix app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "wxt --port 3001",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"test": "echo \"No tests yet for browser extension\"",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/react-query": "^5.90.16",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@types/chrome": "^0.1.33",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@wxt-dev/module-react": "^1.1.5",
		"typescript": "^5.9.3",
		"wxt": "^0.20.13"
	}
}
