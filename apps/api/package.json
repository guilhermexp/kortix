{
  "name": "@repo/api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bash -c 'bun run dev:server & SERVER_PID=$!; bun run dev:worker & WORKER_PID=$!; wait $SERVER_PID $WORKER_PID'",
    "dev:server": "bun run --hot src/index.ts",
    "dev:worker": "bun run src/worker/ingestion-worker.ts",
    "start": "bun --expose-gc run src/index.ts",
    "test": "bun test src/routes/**/*.test.ts",
    "ingest:worker": "bun run src/worker/ingestion-worker.ts",
    "postinstall": "bash install-markitdown.sh"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.14",
    "@anthropic-ai/sdk": "^0.67.0",
    "@google/generative-ai": "^0.24.1",
    "@hono/node-server": "^1.9.0",
    
    "@supabase/supabase-js": "^2.48.0",
    "hono": "^4.4.4",
    "muppet": "0.2.1",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.28.0",
    "redis": "^5.9.0",
    "zod": "^3.25.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.8.3",
    "@modelcontextprotocol/sdk": "1.7.0"
  }
}
