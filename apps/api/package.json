{
	"name": "@repo/api",
	"version": "0.1.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run dev:server",
		"dev:server": "bun run --hot src/index.ts",
		"dev:worker": "bun run src/worker/ingestion-worker.ts",
		"dev:with-worker": "bash -c 'bun run dev:server & SERVER_PID=$!; bun run dev:worker & WORKER_PID=$!; wait $SERVER_PID $WORKER_PID'",
		"dev:queue": "bun run src/worker/queue-worker.ts",
		"dev:all": "bash -c 'bun run dev:server & bun run dev:worker & bun run dev:queue & wait'",
		"start": "bun --expose-gc run src/index.ts",
		"test": "bun test src/routes/**/*.test.ts",
		"ingest:worker": "bun run src/worker/ingestion-worker.ts",
		"queue:worker": "bun run src/worker/queue-worker.ts",
		"postinstall": "bash install-markitdown.sh"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.1.77",
		"@anthropic-ai/sdk": "^0.67.1",
		"@google/generative-ai": "^0.24.1",
		"@hono/node-server": "^1.19.8",
		"@standard-community/standard-json": "^0.3.5",
		"@supabase/supabase-js": "^2.90.1",
		"bullmq": "^5.66.4",
		"hono": "^4.11.3",
		"ioredis": "^5.9.1",
		"muppet": "0.2.1",
		"pdf-parse": "^1.1.4",
		"redis": "^5.10.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@modelcontextprotocol/sdk": "1.7.0",
		"@types/node": "^22.19.5",
		"typescript": "5.9.3"
	}
}
