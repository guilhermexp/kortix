{
  "name": "supermemory",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter='!@repo/docs' --filter='!supermemory-browser-extension'",
    "dev:all": "turbo run dev --filter='!@repo/docs' --filter=!supermemory-browser-extension",
    "test": "turbo run test",
    "format-lint": "bunx biome check --write",
    "check-types": "turbo run check-types",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=supermemory --project=consumer-app && sentry-cli sourcemaps upload --org=supermemory --project=consumer-app --release=$_SENTRY_RELEASE --strip-prefix 'dist/..' dist",
    "postbuild": "bun run sentry:sourcemaps"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/cerebras": "^0.2.16",
    "@ai-sdk/google": "^2.0.23",
    "@ai-sdk/openai": "^1.3.24",
    "@ai-sdk/xai": "^2.0.26",
    "@anthropic-ai/sdk": "^0.55.1",
    "@google/genai": "^1.25.0",
    "@google/generative-ai": "^0.24.1",
    "@hono/zod-validator": "^0.7.4",
    "@scalar/hono-api-reference": "^0.9.22",
    "ai": "5.0.0-beta.24",
    "alchemy": "^0.55.3",
    "atmn": "^0.0.16",
    "axios": "^1.12.2",
    "better-auth": "^1.3.28",
    "boxen": "^8.0.1",
    "cohere-ai": "^7.19.0",
    "compromise": "^14.14.4",
    "dedent": "^1.7.0",
    "destr": "^2.0.5",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "~0.7.1",
    "fast-redact": "^3.5.0",
    "file-type": "^21.0.0",
    "hono": "^4.10.1",
    "hono-openapi": "^0.4.8",
    "nanoid": "^5.1.6",
    "neverthrow": "^8.2.0",
    "next": "^16.0.0",
    "pg": "^8.16.3",
    "pino": "^9.14.0",
    "postgres": "^3.4.7",
    "random-word-slugs": "^0.1.7",
    "resend": "^4.8.0",
    "vite": "^7.1.11",
    "zod": "^3.25.76",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@sentry/cli": "^2.56.1",
    "@supabase/supabase-js": "^2.76.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "turbo": "^2.5.8",
    "typescript": "5.8.3"
  }
}
